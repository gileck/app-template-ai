name: Check Template Updates

# This workflow checks for updates from the template repository
# Uncomment the schedule to enable automatic weekly checks

on:
  # schedule:
  #   - cron: '0 9 * * 1'  # Every Monday at 9 AM UTC
  workflow_dispatch:  # Allow manual trigger

jobs:
  check-template-updates:
    runs-on: ubuntu-latest
    
    steps:
      - name: Checkout repository
        uses: actions/checkout@v4
        with:
          fetch-depth: 0  # Need full history for comparison
      
      - name: Setup Node.js
        uses: actions/setup-node@v4
        with:
          node-version: '20'
          cache: 'yarn'
      
      - name: Install dependencies
        run: yarn install --frozen-lockfile
      
      - name: Check for template updates
        id: check-updates
        run: |
          echo "ðŸ” Checking for template updates..."
          yarn sync-template --dry-run > sync-output.txt 2>&1 || true
          
          if grep -q "No changes detected" sync-output.txt; then
            echo "status=up-to-date" >> $GITHUB_OUTPUT
            echo "âœ… Project is up to date with template"
          elif grep -q "Found .* changed files" sync-output.txt; then
            echo "status=updates-available" >> $GITHUB_OUTPUT
            echo "âš ï¸ Template updates are available"
          else
            echo "status=error" >> $GITHUB_OUTPUT
            echo "âŒ Error checking template"
          fi
          
          cat sync-output.txt
      
      - name: Create Issue if Updates Available
        if: steps.check-updates.outputs.status == 'updates-available'
        uses: actions/github-script@v7
        with:
          script: |
            const fs = require('fs');
            const output = fs.readFileSync('sync-output.txt', 'utf8');
            
            // Check if issue already exists
            const issues = await github.rest.issues.listForRepo({
              owner: context.repo.owner,
              repo: context.repo.repo,
              state: 'open',
              labels: ['template-update']
            });
            
            if (issues.data.length > 0) {
              console.log('Issue already exists, updating it...');
              await github.rest.issues.update({
                owner: context.repo.owner,
                repo: context.repo.repo,
                issue_number: issues.data[0].number,
                body: `## Template Updates Available\n\nUpdated: ${new Date().toISOString()}\n\n### Sync Output\n\n\`\`\`\n${output}\n\`\`\`\n\n### Next Steps\n\n1. Review the changes above\n2. Run \`yarn sync-template --dry-run\` locally to see details\n3. Run \`yarn sync-template\` to apply updates\n4. Resolve any conflicts manually\n5. Test and commit\n\nSee [Template Sync Guide](docs/template-sync.md) for detailed instructions.`
              });
            } else {
              console.log('Creating new issue...');
              await github.rest.issues.create({
                owner: context.repo.owner,
                repo: context.repo.repo,
                title: 'ðŸ”„ Template Updates Available',
                body: `## Template Updates Available\n\n### Sync Output\n\n\`\`\`\n${output}\n\`\`\`\n\n### Next Steps\n\n1. Review the changes above\n2. Run \`yarn sync-template --dry-run\` locally to see details\n3. Run \`yarn sync-template\` to apply updates\n4. Resolve any conflicts manually\n5. Test and commit\n\nSee [Template Sync Guide](docs/template-sync.md) for detailed instructions.\n\n---\n\nThis issue was automatically created by the template update checker.\nClose this issue after syncing or if you want to skip these updates.`,
                labels: ['template-update', 'maintenance']
              });
            }
      
      - name: Upload sync output
        if: always()
        uses: actions/upload-artifact@v4
        with:
          name: template-sync-output
          path: sync-output.txt



